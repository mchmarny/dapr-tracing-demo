#!/bin/bash

set -o errexit

DIR="$(dirname "$0")"
. "${DIR}/config"


function publish_release {
    (
    PRJ=$1
    cd "src/${PRJ}"
    DIR="$(pwd)"
    echo "building ${PRJ}:${RELEASE_VERSION} image in ${DIR}..."

    go mod tidy
    go mod vendor

    docker build \
      --build-arg APP_VERSION=$RELEASE_VERSION \
      -t "${DOCKERHUB_USER}/${PRJ}:${RELEASE_VERSION}" \
      .

    echo "publishing ${DOCKERHUB_USER}/${PRJ}:${RELEASE_VERSION}"
    docker push "${DOCKERHUB_USER}/${PRJ}:${RELEASE_VERSION}"

    )
}


publish_release "producer"
publish_release "decorator"
publish_release "subscriber"

echo "DONE"
